PREFIX schema: <http://schema.org/>
PREFIX view: <https://cube.link/view/>

<>
  a </api/View> ;
  schema:identifier "single dimension" ;
  view:dimension
    [
      a view:Dimension ;
      view:from
        [
          view:source _:source ;
          view:path schema:value ;
        ] ;
    ] ;
.

_:source
  a view:CubeSource ;
  view:cube <https://example.com/cube/foo> ;
.
